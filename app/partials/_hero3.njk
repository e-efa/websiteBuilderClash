{% import '_globalVaribalesForNunjucks.njk' as hero3 %}

<!-- hero3 section -->

<section class="body">
    <div class="h1-hero_section">
        <div class="content-section">
            <div class="title">
                <h2>{{hero3.heroSectionTitle}}</h2>
            </div>
            <div class="body">
                <p>{{hero3.heroSectionBody}}</p>
            </div>
            <div class="h3-input">
                <input type="text" placeholder="Email">
                <button class="hero3-btn">{{hero3.heroSectionBtnTitle}}</button>
            </div>
            <div class="testimonial-section">
                <div class="testi-person_img">
                    <img src="{{hero3.heroSectionTestimonialProfilePictureH3}}" alt="person">
                </div>
                <div class="testi-content">
                    <div class="testi-body">
                        <p>{{hero3.heroSectionTestimonialBody}}</p>
                    </div>
                    <div class="testi-position">
                        <span>{{hero3.heroSectionTestimonialPost}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="image_section">
            <img src="css/image/png/hero1/hero1-mobile.png" alt="mobile">
        </div>
    </div>
</section>